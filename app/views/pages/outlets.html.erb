<%= render("layouts/header") %>

<div class="section">
  <div class="article">
    <h2>
      Farmers' Markets
    </h2>

    <p>
      We regularly attend local famers' markets / food events.
    </p>

    <ul>
      <li>
        Treacle market, Macclesfield
      </li>

      <li>
        Barclays Bank Farmers' Market (staff only), Knutsford
      </li>

      <li>
        Congleton Food Fair
      </li>
    </ul>

    <p>
      Please see the <a href="/">events/news section</a> for the latest
      information on upcoming events or follow us on
      <a href="http://twitter.com/r_of_somerford">Twitter</a> or
      <a href="http://www.facebook.com/pages/Radfords-of-Somerford/170415869654554?ref=ts&amp;v=wall">Facebook</a>.
    </p>
  </div>

  <div class="article last">
    <h2>
      Buy Direct
    </h2>

    <p>You are welcome to order products directly from us.  Please
    <%= link_to("contact us", contact_path) %> for further details.</p>
  </div>
</div>

<div class="section suppliers">
  <h2>Delicatessens / Farm Shops</h2>

  <% if @suppliers.any? %>
    <ul>
      <% @suppliers.each_with_index do |supplier, index| %><li <%= 'class=last' if ( index + 1 ) % 3 == 0 %>>
        <h3><%= supplier.name %></h3>

        <% if signed_in? %>
          <div class="actions">
            <ul>
              <li><%= link_to(
                'Edit',
                edit_supplier_path(supplier),
                class: 'btn'
              ) %></li>

              <li><%= button_to(
                'Delete',
                supplier,
                method: :delete,
                class: 'btn btn-danger'
              ) %></li>
            </ul>
          </div>
        <% end %>

        <p>
          <a href="http://maps.google.com/?q=<%= supplier.latitude %>+<%= supplier.longitude %>"><img src="//maps.google.com/maps/api/staticmap?size=290x286&amp;maptype=roadmap&amp;sensor=false&amp;center=<%= supplier.latitude %>%2C<%= supplier.longitude %>&amp;zoom=12&amp;style=feature%3Aall%7Celement%3Aall%7Csaturation%3A-100&amp;markers=color%3A0xe87eff%7C<%= supplier.latitude %>%2C<%= supplier.longitude %>" /></a>
        </p>

        <p>
          <%= raw(supplier.address.gsub("\n", '<br />')) %>
        </p>

        <% if supplier.website %>
          <p><%= link_to(supplier.website, supplier.website) %></p>
        <% end %>

        <p class="telephone">
          <%= supplier.telephone_number %>
        </p>
      </li><% end %>
    </ul>
  <% else %>
    <div class="contact-us">
      <p>We haven't got anyone supplying our products yet.</p>

      <p><a href="mailto:radfords@hotmail.co.uk">Contact us</a> about
      stocking some or all of our products.</p>
    </div>
  <% end %>

  <% if signed_in? %>
    <%= link_to 'New', new_supplier_path, class: 'btn btn-primary' %>
  <% end %>
</div>

<%= render("layouts/footer") %>
