<header role="banner">
  <%= link_to(root_path) do %>
    <%= image_tag("logo.svg", alt: t(".logo")) %>
  <% end %>

  <%= content_tag(:nav, class: [content_for(:nav_class)], role: :navigation) do %>
    <ul>
      <li class="nav-item"><%= link_to(t(".shop"), shop_path) %></li>

      <li class="nav-item"><%= link_to(t(".outlets"), outlets_path) %></li>

      <li class="nav-item"><%= link_to(t(".contact_us"), contact_path) %></li>

      <li class="nav-item"><%= link_to(
        t(".basket", item_count: @basket.item_count),
        basket_path,
      ) %></li>
    </ul>
  <% end %>
</header>

